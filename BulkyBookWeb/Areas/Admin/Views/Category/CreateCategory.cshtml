    @using BulkyBook.Models

@model Category

<form method="post" asp-action="CreateCategory">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Category</h2>
            <hr />
        </div>
        @*<div asp-validation-summary="All"></div>*@
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" id="NameUpload" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="DisplayOrder"></label>
            <input asp-for="DisplayOrder" class="form-control" />
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>
          
        
          <button type="submit" onclick="return ValidateInput()" class="btn btn-primary" style="width:150px">Create</button>   
        
        <a asp-controller="Category"  asp-action="Index" class="btn btn-secondary" style="width:150px">
            Back to list
        </a>
    </div>
</form>
@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
     <script>
    function ValidateInput(){
        if(document.getElementById("NameUpload").value==""){
            Swal.fire({
                icon: 'error',
                title: 'Oops...',
                text: 'Please enter a Name value!',
                });
                return false;
        }
        return true;
    }
    </script>
}

